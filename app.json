{
  "expo": {
    "name": "Daremelive",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": [
      "mobile",
      "com.googleusercontent.apps.158183037990-6lh53kvkqcak52djlbgh3dis8lekjso2"
    ],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mobile.daremelive",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app needs access to camera for live streaming.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for live streaming audio.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to let you change your profile picture."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mobile.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you change your profile picture."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow this app to access your camera for live streaming.",
          "microphonePermission": "Allow this app to access your microphone for live streaming audio."
        }
      ],
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "58187a66-a5c4-43cc-a3d6-29402388b86c"
      },
      "GOOGLE_IOS_CLIENT_ID": "158183037990-6lh53kvkqcak52djlbgh3dis8lekjso2.apps.googleusercontent.com",
      "GOOGLE_ANDROID_CLIENT_ID": "",
      "GOOGLE_CLIENT_ID": "158183037990-2bou57ddq1nmlt8a57nsn6j5jj01qc51.apps.googleusercontent.com",
      "GOOGLE_EXPO_CLIENT_ID": ""
    },
    "owner": "mrted"
  }
}
